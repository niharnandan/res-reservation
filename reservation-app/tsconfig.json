{
  "compilerOptions": {
    "target": "ESNext",                            // Updated to a more modern target for better compatibility
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",                            // Changed to ESNext for modern module support
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,                      // Set to false, not required for Node.js
    "noEmit": true,                                // Keep noEmit for ts-node usage
    "jsx": "react-jsx",                            // JSX option for React 17+ JSX transform
    "baseUrl": ".",                                // Optionally allows cleaner imports
    "paths": {
      "@api/*": ["api/*"]                          // Optional alias for backend API (if you use this pattern)
    }
  },
  "include": [
    "src",                                         // Your React code
    "api/**/*.ts"                                  // Include backend API TypeScript files
  ],
  "exclude": [
    "node_modules"
  ]
}
