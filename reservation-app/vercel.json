{
  "version": 2,
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { 
      "src": "^/assets/(.*)", 
      "dest": "/assets/$1" 
    },
    { 
      "src": "^/(.*)\\.(js|css|ico|png|jpg|jpeg|svg|webp)$", 
      "dest": "/$1.$2" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "outputDirectory": "build"
}